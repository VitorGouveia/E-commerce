generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id
  created_at DateTime
  name       String
  lastname   String?
  username   String
  userhash   String
  cpf        String?
  email      String
  password   String
  address    Address[]
}

model Address {
  id         Int    @id @default(autoincrement())
  userId     String
  postalCode String
  city       String
  state      String
  street     String
  number     String
  user       User   @relation(fields: [userId], references: [id])
}

model Rating {
  id         Int    @id @default(autoincrement())
  itemId     String @unique
  one_star   String
  two_star   String
  three_star String
  four_star  String
  five_star  String
  item       Item   @relation(fields: [itemId], references: [id])
}

model Image {
  id     Int    @id @default(autoincrement())
  itemId String
  link   String
  item   Item   @relation(fields: [itemId], references: [id])
}

model Item {
  id             String   @id @default(uuid())
  created_at     DateTime @default(now())
  name           String
  short_name     String
  description    String
  price          String
  shipping_price String
  discount       String
  category       String
  orders         String
  image          Image[]
  rating         Rating?
}
