// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Address {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId String
  postalCode String?
  city String?
  state String?
  street String?
  number String?
}

model User {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  name String
  last_name String?
  cpf String?
  email String
  password String
  address Address[]
}

model Rating {
  id Int @id @default(autoincrement())
  item Item @relation(fields: [itemId], references: [id])
  itemId String
  one_star String?
  two_star String?
  three_star String?
  four_star String?
  five_star String?
}

model Image {
  id Int @id @default(autoincrement())
  item Item @relation(fields: [itemId], references: [id])
  itemId String
  link String?
}

model Item {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  name String
  short_name String
  description String
  price String
  shipping_price String
  discount String?
  category String
  image Image[]
  orders String
  rating Rating?
}